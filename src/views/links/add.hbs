<div class="container p-4">
    <div class="row">

        <div class="card col-md-6 mx-auto shadow">
            <h2 class="card-title text-center pt-3">{{ __ 'Add new link' }}</h2>
            <div class="card-body">
                <form action="/links/add" method="POST" id="formulary">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" placeholder="{{ __ 'Title' }}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="url" class="form-control" name="url" placeholder="{{ __ 'Url' }}">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="3"
                            placeholder="{{ __ 'Description'}}"></textarea>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input disabled class="form-check-input" type="checkbox" value="checkedValue">
                            {{ __ 'Private (soon)' }}</label>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <button type="submit" form="formulary" class="btn btn-success btn-block">{{ __ "Save"
                        }}</button>
                    <a href="/links" class="btn btn-secondary btn-block">{{ __ "Cancel" }}</a>
                </div>
            </div>
        </div>

    </div>
</div>