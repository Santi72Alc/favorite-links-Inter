<div class="container p-4">
    <div class="row">
        <div class="card col-8 col-sm-6 col-md-4 mx-auto text-center">
            <div class="car-header m-3">
                <h3>{{ __ 'SignIn' }}</h3>
            </div>
            <img src="{{ appInfo.logo }}" alt="Logo App" class="card-img-top mx-auto w-50">
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="{{ __ 'Username' }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="{{ __ 'Password' }}">
                    </div>
                    <hr>

                    <div class="form-group">
                        <button class="btn btn-success btn-block">{{ __ 'SignIn' }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>